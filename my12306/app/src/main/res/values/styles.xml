<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">0dp</item>
    </style>

    <declare-styleable name="BottomNavigationMenu">
        <!-- menu default background color -->
        <attr name="android:background" />

        <!-- default badge color -->
        <attr name="bbn_badgeColor" format="color" />

        <!-- animation duration for the menu items -->
        <attr name="bbn_itemAnimationDuration" format="integer" />

        <!-- ripple selector color -->
        <attr name="bbn_rippleColor" format="color" />

        <!-- menu item active color -->
        <attr name="bbn_itemColorActive" format="color" />

        <!-- menu item inactive color -->
        <attr name="bbn_itemColorInactive" format="color" />
    </declare-styleable>

    <style name="linearlayout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_ripple_style">
        <item name="android:background">@drawable/item_select_clickable</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_left_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cutting_line_1dp">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/selectable_item_background_general_light_accent</item>
    </style>

    <style name="cutting_line_1dp_left">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_white</item>
        <item name="android:layout_width">@dimen/margin_left_30</item>
    </style>
</resources>
